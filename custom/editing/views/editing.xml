<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
            <!-- step2 window action -->

        <record id="sale_order_mandob_report_action" model="ir.actions.act_window">
            <field name="name">مبيعات المندوب</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
           <field name="domain">[('date_order', '&gt;=', (context_today().strftime('%Y-%m-%d') + ' 00:00:00')),
                ('date_order', '&lt;=', (context_today().strftime('%Y-%m-%d') + ' 23:59:59'))
                ]</field>
        </record>

            <!-- step 1 menu-->
       <menuitem id="sale_order_mandob_report" name="mandob sale order" action="sale_order_mandob_report_action" sequence="1" groups="customer_route_management.group_rout_user"/>






    </data>
